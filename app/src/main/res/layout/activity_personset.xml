<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="keyboard"
    android:orientation="vertical">

    <com.a32.yuqu.view.TopTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="旧密码"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_pwd_oldpwd"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:layout_height="48dp"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:hint="旧密码"
            android:inputType="numberPassword"
            android:textSize="14sp"
            android:singleLine="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新密码"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_pwd_newpwd"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:hint="新密码"
            android:inputType="numberPassword"
            android:textSize="14sp"
            android:singleLine="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="再次确认密码"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_pwd_configernewpwd"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:hint="再次确认密码"
            android:inputType="numberPassword"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp"
            android:singleLine="true"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_pwd_congigerupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="确认修改"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:background="@drawable/shape_login_button_background"/>
</LinearLayout>