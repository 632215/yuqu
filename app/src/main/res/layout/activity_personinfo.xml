<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.a32.yuqu.view.TopTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_toolbar_background"
        android:orientation="vertical">

        <com.a32.yuqu.view.CircleImageView
            android:id="@+id/img_register_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@mipmap/head" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineGray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/name"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvName"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="@string/editname"
                android:lines="1"
                android:paddingBottom="15dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorTextGray"
                android:enabled="false"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/et_register_name"
                android:background="@color/colorLineGray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/phone"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_register_phone"
                android:layout_toRightOf="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="@string/editPhone"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="11"
                android:paddingBottom="15dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorTextGray"
                android:enabled="false"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/et_register_phone"
                android:background="@color/colorLineGray" />
        </RelativeLayout>

